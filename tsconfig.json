{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
